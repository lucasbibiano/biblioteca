  <%= f.text_field :name %></div>

  <div><%= f.label :phone, "Telefone" %><br />
  <%= f.phone_field :phone %></div>

  <div><%= f.label :address, "EndereÃ§o" %><br />
  <%= f.text_area :address, size: "10x10" %></div>

  <%= f.fields_for :profile do |ff| %>

    <div><%= ff.label :email %><br />
